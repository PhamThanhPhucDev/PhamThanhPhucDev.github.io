    <script>
        // Simple terminal typing effect
        document.addEventListener('DOMContentLoaded', function() {
            const terminal = document.querySelector('.terminal');
            if (terminal) {
                setTimeout(() => {
                    terminal.innerHTML += '<p>root@cybertools:~# <span class="blink">_</span></p>';
                }, 2000);
            }
            
            // Form submission simulation
            const forms = document.querySelectorAll('.tool-form form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const resultTerminal = document.getElementById('result-terminal');
                    if (resultTerminal) {
                        resultTerminal.style.display = 'block';
                        resultTerminal.innerHTML = `
                            <p>Scanning target: ${this.url.value}</p>
                            <p>Checking common admin paths...</p>
                            <p>/admin/ => 404</p>
                            <p>/wp-admin/ => 200 FOUND!</p>
                            <p>/administrator/ => 403</p>
                            <p>Scan completed. 1 potential entry point found.</p>
                            <p>root@cybertools:~# <span class="blink">_</span></p>
                        `;
                    }
                    
                    // Simulate API call delay
                    setTimeout(() => {
                        alert('Operation completed. Check terminal for results.');
                    }, 1500);
                });
            });
            
            // Tool buttons effect
            const toolBtns = document.querySelectorAll('.tool-btn, input[type="submit"]');
            toolBtns.forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 0 10px var(--primary)';
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
